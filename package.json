{
  "name": "calendar-manager-backend",
  "version": "2.1.2",
  "description": "Calendar Manager MVP Backend",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "postbuild": "mkdir -p dist/db/migrations && cp -f src/db/migrations/*.sql dist/db/migrations/",
    "start": "node dist/index.js",
    "migrate": "node dist/db/migrate.js up",
    "migrate:up": "node dist/db/migrate.js up",
    "migrate:down": "node dist/db/migrate.js down",
    "migrate:status": "node dist/db/migrate.js status"
  },
  "engines": {
    "node": ">=18"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "@types/pg": "^8.10.9",
    "typescript": "^5.3.3",
    "ts-node-dev": "^2.0.0"
  }
}
